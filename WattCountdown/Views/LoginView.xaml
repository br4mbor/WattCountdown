                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Content="UserName:" Grid.Row="0" Grid.Column="0"/>
                <Label Content="Password:" Grid.Row="1" Grid.Column="0"/>
                <TextBox Text="{Binding UserName}" Grid.Row="0" Grid.Column="1" Margin="5"/>
                <PasswordBox x:Name="Password" Grid.Row="1" Grid.Column="1" Margin="5"/> <!--app:PasswordBoxAssistant.BindPassword="True" app:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->
            </Grid>
        </GroupBox>
